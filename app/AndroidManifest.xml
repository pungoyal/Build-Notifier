<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.thoughtworks.buildnotifier"
          android:versionCode="1" android:versionName="1.0">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:label="@string/app_name" android:icon="@drawable/icon">
        <activity android:name="BuildNotifier" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".About" android:label="@string/about_title"
                  android:theme="@android:style/Theme.Dialog"/>
        <activity android:name=".activities.StatusActivity" android:label="@string/status_title"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.PipelineActivity" android:label="@string/pipeline_title"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.preferences.ServerPreferences" android:label="@string/settings_title"/>
    </application>

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"/>
</manifest> 
